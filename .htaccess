# ---------------------------------------------------------------------------- #
# Always search for index.php in any directory
DirectoryIndex index.html

# ---------------------------------------------------------------------------- #
# This section can be used to force HTTPS connection. Enable by removing
# the hash (#) comments from lines 27, 29 and 30.
# Enable rewriting mod
RewriteEngine on
# Force HTTPS/SSL connection
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
